@{
}

@model List<BlogPost>

<div class="text-end mt-3">
    <a href="/Admin/Home/Add" class="btn btn-primary">Post Ekle</a>
</div>

<table class="table">
    <tr>
        <th>Başlık</th>
        <th style="width:20%;">#</th>
    </tr>
    @foreach (var post in Model)
    {
        <tr>
            <td>@post.Title</td>
            <td>
                <a href="/Admin/Home/Delete/@post.Id">sil</a>
                <a href="/Admin/Home/Update/@post.Id">güncelle</a>
            </td>
        </tr>
    }
</table>