@{
    ViewData["Title"] = "Home Page";
}

@model List<BlogPost>

<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-6">
            <div class="card">
                <div class="card-header">
                    @post.Title
                </div>
                <div class="card-body">
                    @post.Summary
                </div>
                <div class="card-footer text-end">
                    <a href="/Home/Post/@post.Id" class="btn btn-sm btn-primary">Oku</a>
                </div>
            </div>
        </div>
    }
</div>